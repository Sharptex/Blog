@using Microsoft.AspNetCore.Identity;
@using Blog_DAL.Models;

@inject SignInManager<User> SignInManager

    @model Blog.ViewModels.LoginViewModel
    @{
        ViewData["Title"] = "Home Page";
    }

    @if (SignInManager.IsSignedIn(User) && User.HasClaim("Role", "Admin"))
    {
        <div>Hello @User.Identity.Name!</div>

        @foreach (var cl in User.Claims)
        {
            @if (cl.Type == "Role")
            {
                <div> @cl.Value </div>
            }
        }
    }
    else
    {
        <h2>Вход в приложение</h2>

        <form method="post" asp-controller="Account" asp-action="Login"
              asp-route-returnUrl="@Model.ReturnUrl">

            <div class="form-group">
                <label asp-for="Login"></label><br />
                <input asp-for="Login" />
                <span asp-validation-for="Login"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password"></label><br />
                <input asp-for="Password" />
                <span asp-validation-for="Password"></span>
            </div>
            <div class="form-group">
                <label asp-for="RememberMe"></label><br />
                <input asp-for="RememberMe" />
            </div>
            <div class="form-group">
                <input class="enter_submit" type="submit" value="Войти" />
            </div>
        </form>

        <div>
            Еще нет аккаунта? <a asp-area="" asp-controller="Account" asp-action="RegisterGet">Зарегистрируйтесь</a>
        </div>
    }

    @section Scripts
{
        <partial name="_ValidationScriptsPartial" />
    }

