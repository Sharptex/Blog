@model List<Blog.ViewModels.RoleViewModel>

@{
    ViewData["Title"] = "Role List";
}

<h2>Все теги</h2>
<div>
    <a asp-area="" asp-controller="Role" asp-action="Index">Добавить роль</a>
</div>

<div class="block-reg background-white">

    @if (@Model.Count() != 0)
    {

        @foreach (var role in @Model)
        {
            <div class="list-block">
                <div class="center-block">
                    <a asp-area="" asp-controller="Role" asp-action="Index" asp-route-id="@role.Id">@role.Name</a>
                </div>
                <div class="center-block">@role.Description </div>

                <div>
                    <form method="get" asp-controller="Role" asp-action="Get" asp-route-id="@role.Id">
                        <div>
                            <input class="enter_submit" type="submit" value="Редактировать" />
                        </div>
                    </form>

                    <form method="post" asp-controller="Role" asp-action="Delete" asp-route-id="@role.Id">
                        <div>
                            <input class="enter_submit" type="submit" value="Удалить" />
                        </div>
                    </form>
                </div>
            </div>
        }
    }
    else
    {
        <div>
            <label> Ролей пока нет.</label>
        </div>
    }


</div>