@model List<Blog.ViewModels.RoleViewModel>

@{
    ViewData["Title"] = "Role List";
}

<h2>Все теги</h2>
<div>
    <a asp-area="" asp-controller="Role" asp-action="Create">Добавить роль</a>
</div>

<div class="block-reg background-white">

    @if (@Model.Count() != 0)
    {

        @foreach (var role in @Model)
        {
    <div class="card" style="width: 18rem;">
        <div class="card-body">
            <a asp-area="" asp-controller="Role" asp-action="Index" asp-route-id="@role.Id">@role.Name</a>
            <div class="card-text">@role.Description </div>
        </div>

            <div class="form-check form-check-inline">
                <form method="get" asp-controller="Role" asp-action="Get" asp-route-id="@role.Id">
                    <input class="btn btn-outline-primary btn-sm" type="submit" value="Редактировать" />
                </form>

                <form method="post" asp-controller="Role" asp-action="Delete" asp-route-id="@role.Id">
                    <input class="btn btn-outline-danger btn-sm" type="submit" value="Удалить" />
                </form>
            </div>

        </div>
        }
    }
    else
    {
        <div>
            <label> Ролей пока нет.</label>
        </div>
    }


</div>