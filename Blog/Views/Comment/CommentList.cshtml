@model List<Blog.ViewModels.CommentViewModel>

@{
    ViewData["Title"] = "Comment List";
}

<h2>Все комментарии</h2>
<div>
    <a asp-area="" asp-controller="Comment" asp-action="Create">Добавить комментарий</a>
</div>

<div class="block-reg background-white">

    @if (@Model.Count() != 0)
    {

        @foreach (var comm in @Model)
        {
            <div class="card" style="width: 18rem;">
                <div class="card-body">
                    <div class="card-text">
                        @comm.Content
                    </div>
                    <div class="card-title">
                        <a asp-area="" asp-controller="Comment" asp-action="Index" asp-route-id="@comm.Id">@comm.Post.Title</a> 
                        <footer class="blockquote-footer">@comm.Author.Login</footer>
                    </div>
                    
                </div>

                <div class="form-check form-check-inline">
                    <form method="get" asp-controller="Comment" asp-action="Get" asp-route-id="@comm.Id">
                        <input class="btn btn-outline-primary btn-sm" type="submit" value="Редактировать" />
                    </form>

                    <form method="post" asp-controller="Comment" asp-action="Delete" asp-route-id="@comm.Id">
                        <input class="btn btn-outline-danger btn-sm" type="submit" value="Удалить" />
                    </form>
                </div>

            </div>

            <br/>
        }
    }
    else
    {
        <div>
            <label> Комментариев пока нет.</label>
        </div>
    }


</div>
